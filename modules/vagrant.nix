  users.users.vagrant = {
    isNormalUser = true;
    description = "vagrant";
    extraGroups = [ "networkmanager" "wheel" ];
    name            = "vagrant";
    group           = "vagrant";
    password        = "vagrant";
    home            = "/home/vagrant";
    createHome      = true;
    useDefaultShell = true;
    openssh.authorizedKeys.keys = [
          "ssh-rsa  vagrant insecure public key"
    ];

  };
